<h3 class="text-center mb-4">Cadastre-se</h3>

<%= simple_form_for(resource, html: { class: 'login-form' }, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="text-center">
    <%= f.error_notification unless resource.errors.any? %>
    <%= render 'devise/shared/error_messages' %>
  </div>

  <div class="form-inputs">
    <%= f.input :name,
                autofocus: true,
                required: true,
                label: false,
                placeholder: 'Nome'
    %>
    <%= f.input :phone,
                required: true,
                label: false,
                placeholder: 'Telefone'
    %>
    <%= f.input :email,
                required: true,
                label: false,
                placeholder: 'E-mail',
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                label: false,
                placeholder: ("Senha deve ser no mÃ­nimo #{@minimum_password_length} caracters" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                required: true,
                label: false,
                placeholder: 'Confirme a senha',
                input_html: { autocomplete: "new-password" } %>
  </div>

  <%= render 'devise/shared/button_submit', f: f, text: 'Cadastrar' %>

  <div class="form-group d-md-flex">
    <div class="w-100">
      <%= render "devise/shared/links" %>
    </div>
  </div>
<% end %>
