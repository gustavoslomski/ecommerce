
<div class="row">
	<div class="col-lg-12">
		<div class="card shadow mb-4">
			<div class="card-body">
        <%= simple_form_for([:admin, @product]) do |f| %>
          <%= f.error_notification %>
          <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

          <div class="form-inputs">
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :price %>
            <%= f.input :publish %>
            <%= f.label :category_id, 'Categoria' %>
            <%= f.select(:category_id, options_for_select(Category.all.map { |c| [c.name, c.id] }, selected: @product.category_id), {}, { class: "form-control mb-4" }) %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, 'Salvar', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
		</div>
	</div>
</div>